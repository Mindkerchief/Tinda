<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="store"
            type="com.mindkerchief.tinda.domain.StoreModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardV_storeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_margin"
            android:layout_marginTop="@dimen/view_margin_half"
            android:layout_marginEnd="@dimen/view_margin"
            android:layout_marginBottom="@dimen/view_margin_half"
            app:cardCornerRadius="@dimen/view_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="100dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/imageV_featureImage1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:loadStoreImage="@{store.storeFeatureImage1}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/sample_product_image" />

                    <TextView
                        android:id="@+id/textV_featurePrice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{store.storeFeatureFormattedPrice1}"
                        android:textColor="@color/teal"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageV_featureImage1"
                        tools:text="@string/label_product_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/imageV_featureImage2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:loadStoreImage="@{store.storeFeatureImage2}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/sample_product_image" />

                    <TextView
                        android:id="@+id/textV_featurePrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{store.storeFeatureFormattedPrice2}"
                        android:textColor="@color/teal"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageV_featureImage2"
                        tools:text="@string/label_product_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/imageV_featureImage3"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:loadStoreImage="@{store.storeFeatureImage3}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/sample_product_image" />

                    <TextView
                        android:id="@+id/textV_featurePrice3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{store.storeFeatureFormattedPrice3}"
                        android:textColor="@color/teal"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageV_featureImage3"
                        tools:text="@string/label_product_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/imageV_featureImage4"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:loadStoreImage="@{store.storeFeatureImage4}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/sample_product_image" />

                    <TextView
                        android:id="@+id/textV_featurePrice4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{store.storeFeatureFormattedPrice4}"
                        android:textColor="@color/teal"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageV_featureImage4"
                        tools:text="@string/label_product_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:id="@+id/imageV_featureImage5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:loadStoreImage="@{store.storeFeatureImage5}"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/sample_product_image" />

                    <TextView
                        android:id="@+id/textV_featurePrice5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{store.storeFeatureFormattedPrice5}"
                        android:textColor="@color/teal"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageV_featureImage5"
                        tools:text="@string/label_product_price" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </TableRow>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/imageV_storeImage"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/label_product_name"
                    android:loadStoreImage="@{store.storeImage}"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/sample_store_image" />

                <TextView
                    android:id="@+id/textV_storeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_margin_half"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/view_margin_half"
                    android:ellipsize="end"
                    android:labelFor="@id/imageV_storeImage"
                    android:maxLines="2"
                    android:text="@{store.storeName}"
                    android:textColor="@color/dark"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageV_storeImage"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/label_product_store" />

                <TextView
                    android:id="@+id/textV_storeAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/view_margin_half"
                    android:layout_marginStart="@dimen/view_margin_half"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/view_margin_half"
                    android:ellipsize="end"
                    android:labelFor="@id/imageV_storeImage"
                    android:maxLines="1"
                    android:text="@{store.storeAddress}"
                    android:textColor="@color/dark"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageV_storeImage"
                    app:layout_constraintTop_toBottomOf="@+id/textV_storeName"
                    tools:text="@string/label_store_address" />

                <TextView
                    android:id="@+id/textV_storeCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/view_margin_half"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="@dimen/view_margin_half"
                    android:layout_marginBottom="@dimen/view_margin_half"
                    android:ellipsize="end"
                    android:labelFor="@id/imageV_storeImage"
                    android:maxLines="1"
                    android:text="@{store.storeCategory}"
                    android:textColor="@color/teal"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageV_storeImage"
                    app:layout_constraintTop_toBottomOf="@+id/textV_storeAddress"
                    app:layout_constraintVertical_bias="0.0"
                    tools:text="@string/label_store_category" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>