<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="@dimen/view_corner_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardV_storeInfo">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerV_storeFeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardV_storeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/view_margin_half"
        android:layout_marginTop="@dimen/view_margin_half"
        android:layout_marginEnd="@dimen/view_margin_half"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:cardCornerRadius="@dimen/view_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageV_storeImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/label_product_name"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/sample_store_image" />

            <TextView
                android:id="@+id/textV_storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/view_margin_half"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/view_margin_half"
                android:ellipsize="end"
                android:labelFor="@id/imageV_storeImage"
                android:maxLines="2"
                android:text="@string/label_product_store"
                android:textColor="@color/dark"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageV_storeImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textV_storeAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin_half"
                android:ellipsize="end"
                android:labelFor="@id/imageV_storeImage"
                android:maxLines="1"
                android:text="@string/label_store_address"
                android:textColor="@color/dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageV_storeImage"
                app:layout_constraintTop_toBottomOf="@+id/textV_storeName" />

            <TextView
                android:id="@+id/textV_storeCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_margin_half"
                android:ellipsize="end"
                android:labelFor="@id/imageV_storeImage"
                android:maxLines="1"
                android:text="@string/label_store_category"
                android:textColor="@color/teal"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageV_storeImage"
                app:layout_constraintTop_toBottomOf="@+id/textV_storeAddress" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>